@model Employee[]
    <h1 style="font-style:italic">@EmployeesMvc.Controllers.EmployeesController.CurrentCompany.Name</h1>
@if (Model.Count() != 0)
{
            <br/>
        <ul>
        @foreach (var employee in Model)
        {
                <li><a asp-controller="Employees" asp-action="Details" asp-route-id="@employee.Id">@employee.Name</a></li>
        }
        </ul>
}



